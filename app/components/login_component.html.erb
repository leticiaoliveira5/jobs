<%= stylesheet_link_tag "login_component.css" %>

<div class="box">
  <div class="tabs">
    <div class="tab" onclick="showTab(event, 'candidate')" id="defaultOpen">Candidato</div> 
    <div class="tab" onclick="showTab(event, 'company')">Empresa</div>
  </div>
  <div class="tabcontent" id="candidate">
    <div id="login-form">
      <label for="email">e-mail</label>
      <input type="email" id="email">
      <label for="password">password</label>
      <input type="password" id="password">
      <%= link_to 'Forgot my password', new_candidate_session_path, class: 'hint-link' %>
    </div>

    <div>
      <%= link_to 'Login', new_candidate_session_path, class: 'btn' %>
    </div>

    <div>
      Or create an account
      <br>
      <%= link_to 'Sign in', new_candidate_session_path %>
    </div>
  
  </div>
  <div class="tabcontent" id="company">
    <div id="login-form">
      <label for="email">e-mail</label>
      <input type="email" id="email">
      <label for="password">password</label>
      <input type="password" id="password">
      <%= link_to 'Forgot my password', new_candidate_session_path, class: 'hint-link' %>
    </div>

    <div>
      <%= link_to 'Login', new_candidate_session_path, class: 'btn' %>
    </div>

    <div>
      Or create an account
      <br>
      <%= link_to 'Sign in', new_candidate_session_path %>
    </div>
  </div>
</div>

<script>
  document.getElementById("defaultOpen").click();

  function showTab(evt, tabName) {
  // Declare all variables
  var i, tabcontent, tab;

  // Get all elements with class="tabcontent" and hide them
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }

  // Get all elements with class="tab" and remove the class "active"
  tab = document.getElementsByClassName("tab");
  for (i = 0; i < tab.length; i++) {
    tab[i].className = tab[i].className.replace(" active", "");
  }

  // Show the current tab, and add an "active" class to the button that opened the tab
  document.getElementById(tabName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>
