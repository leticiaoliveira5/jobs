<div class="login-component">
  <div class="tabs">
    <div class="tab" onclick="showTab(event, 'candidate-form')" id="defaultOpen">
      <%= t('activerecord.models.candidate.one') %>
    </div> 
    <div class="tab" onclick="showTab(event, 'employee-form')">
      <%= t('activerecord.models.company.one') %>
    </div>
  </div>
  <div class="tabcontent" id="candidate-form">
    <%= render(LoginFormComponent.new(resource_name: 'candidate')) %>
  </div>
  <div class="tabcontent" id="employee-form">
    <%= render(LoginFormComponent.new(resource_name: 'employee')) %>
  </div>
</div>

<script>
  document.getElementById("defaultOpen").click();

  function showTab(evt, tabName) {
  // Declare all variables
  var i, tabcontent, tab;

  // Get all elements with class="tabcontent" and hide them
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }

  // Get all elements with class="tab" and remove the class "active"
  tab = document.getElementsByClassName("tab");
  for (i = 0; i < tab.length; i++) {
    tab[i].className = tab[i].className.replace(" active", "");
  }

  // Show the current tab, and add an "active" class to the button that opened the tab
  document.getElementById(tabName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>
