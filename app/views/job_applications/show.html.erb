<%= render(BoxComponent.new) do |box| %>
  <%= box.title { t('.job_application') } %>
  <%= box.body do %>
    <ul class="list-group">
      <li class="list-group-item">
        <b>Candidato:</b> <%= @candidate.full_name %> (<%= link_to 'Ver perfil', candidate_path(@job_application.candidate) %>)
      </li>
      <li class="list-group-item">
        <b>Endereço:</b> <%= @candidate.address_short_form %>
      </li>
      <li class="list-group-item">
      <b>Apresentação:</b> <%= @candidate.about_me %>
      </li>
      <li class="list-group-item">
      <b>Vaga:</b> <%= link_to @job_application.job_opportunity.job_title, job_opportunity_path(@job_application.job_opportunity) %>
      </li>
      <li class="list-group-item">
      <b>Empresa:</b> <%= link_to @job_application.company.name, company_path(@job_application.company) %>
      </li>
    </ul>
    <% if candidate_signed_in? && current_candidate == @job_application.candidate %>
      <%= button_to 'Cancelar candidatura', job_application_path(@job_application), method: :delete, class: 'btn btn-danger mt-2' %>
    <%end%>
    <% if employee_signed_in? %>
      <%= button_to "Fazer proposta para #{@job_application.candidate.firstname}", new_job_application_job_proposal_path(@job_application), method: :get, class: 'btn btn-success mt-3' %>
    <% end %>
  <% end %>
<% end %>

<% if employee_signed_in? %>
  <%= render(BoxComponent.new(behavior: :collapsible)) do |box| %>
    <%= box.title { t('.reject_application') } %>
    <%= box.body do %>
      <div class="reject-form">
        <%= form_tag decline_job_application_path, method: :post do %>
          <div class="form-group">
            <%= label_tag t('.give_a_reason') %>
            <%= text_area_tag :rejection_motive, params[:rejection_motive], class: 'form-control' %>
            <%= submit_tag 'Confirmar', class: 'btn btn-success mt-2' %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
