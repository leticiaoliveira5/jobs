<center><div class="contentblock">
<h1>Cadastro de empresa</h1>

<%= form_for(@company) do |f| %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :domain %>
    <%= f.text_field :domain %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <%= f.submit 'Cadastrar empresa' %>

<% end %>
<p><%= link_to 'Voltar', root_path %>

</div>