<center>

<div class="companydata">
<h2>Dados da empresa</h2>
<p>Nome: <%= @company.name %></p> 
<p>Domínio: <%= @company.domain %></p>
<p>Endereço: <%= @company.city %> - <%= @company.state %></p>
</div>

<div clas="joblist">
<h2>Vagas cadastradas</h2>
<%# if @company.jobs.count == 0 %>
<p>Nenhuma vaga cadastrada.</p>
<%#end%>
</div>

<div class="employeepanel">

<% if employee_signed_in? && current_employee.company == @company %>

<h2>Painel colaborador</h2>

<% if current_employee.admin? %>
<h3>Funcionários cadastrados:</h3>
<% @company.employees.each do |employee| %>
<p><%= employee.firstname %> <%= employee.surname %> (<%= employee.role %>)</p>
<%end%>
<p><%= link_to 'Editar dados da empresa', edit_company_path(@company) %></p>
<%end%>

<p><%= link_to 'Cadastrar nova vaga', company_path(@company) %></p>
<% end %>
</div>




</center>