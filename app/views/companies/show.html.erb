<%= render(BoxComponent.new) do |component| %>
  <%= component.title { 'Dados da empresa' } %>
  <%= component.body do %>
    <%= company_logo(@company, size: '80x80')%>
    <h3><%= t('.name') %></h3>
    <%= @company.name %> 
    <h3><%= t('.domain') %></h3>
    <%= @company.domain %>
    <h3><%= t('.address') %></h3>
    <%= @company.address_to_line || '-' %>
    <h3><%= t('.document') %></h3>
    <%= @company.document %>
  <% end %>
<% end %>

