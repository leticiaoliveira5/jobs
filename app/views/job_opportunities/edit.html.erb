<center>

<div class="contentblock">
<h1>Edição de vaga - <%= current_employee.company.name %> </h1>

<%= form_for(@job_opportunity) do |f| %>
  
  <div>
    <%= f.label :job_title %>
    <%= f.text_field :job_title %>
  </div>

   <div>
    <%= f.label :job_level %>
    <%= f.text_field :job_level %>
  </div>

   <div>
    <%= f.label :salary_range %>
    <%= f.text_field :salary_range %>
  </div>

   <div>
    <%= f.label :place %>
    <%= f.text_field :place %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

    <div>
    <%= f.label :limit_date %>
    <%= f.text_field :limit_date %>
  </div>

      <div>
    <%= f.label :number_of_positions %>
    <%= f.text_field :number_of_positions %>
  </div>

  <%= f.submit 'Atualizar' %>

<% end %>

<p><%= link_to 'Voltar', company_path(current_employee.company) %>
</div>