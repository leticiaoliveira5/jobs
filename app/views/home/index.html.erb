<center>
<div class="contentblock">

<h2>Busca</h2>

<%= form_tag(search_results_path, method: :get) do |f| %>
  <%= label_tag :search_input, "Busca por empresa ou vaga" %>
  <%= text_field_tag :search_input, params[:search_input] %>
  <%= submit_tag("Buscar") %>
<%end%>

</div>

<div class="contentblock">
<h2>Vagas recentes</h2>

<% @job_opportunities.each do |job| %>
<h4><%= link_to job.job_title, job_opportunity_path(job) %> - <%= job.company.name %></h4>
<p>  (<%= job.place %>) </p>
<%end%>
<h3><%=button_to 'Ver empresas cadastradas', companies_path%></h3>
</div>



