body {
  font-family: 'Montserrat', sans-serif;
  color: var(--text_normal);
  background-image: url('<%= asset_path HomeController.random_background_image %>');
  background-repeat: no-repeat;
  background-size: cover;
  background-color: var(--background_color);
  font-size: 14px;
  font-weight: 400;
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
}

h1, h2, h3, h4 { color: var(--title); }

a {
  color: var(--link);
  font-weight: 500;
  letter-spacing: 0.05em;
  padding: 2px;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.button {
  color: var(--button_link);
  background-color: var(--button_color);
  border-radius: 5px 10px 7px;
  display: inline-block;
  margin: 10px;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
}

.button:hover {
  cursor: pointer;
}

.contentblock {
  background-color: var(--content_blocks_color);
  width: 80%;
  align-self: center;
  border-radius: 10px 45px 25px;
  padding: 10px 25px 20px 25px; /* top right bottom left */
  margin: 15px;
  text-align: left;
}

.flex-container {
  order: 1;
  flex-grow: 1;
  background-color:red;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
