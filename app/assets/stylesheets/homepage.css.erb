body {
  font-family: 'Montserrat', sans-serif;
  color: var(--text_normal);
  background-color: var(--background_color);
  font-size: 14px;
  font-weight: 400;
}

/* large screen */
@media screen and (min-device-width: 750px) and (min-width: 750px) {

  body {
    background-image: url('<%= asset_path HomeController.random_background_image %>');
    background-repeat: no-repeat;
    background-size: cover;
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100vh;
  }

  .container {
    margin: auto;
    width: 80%;
  }

  .flex-container {
    align-items: center;
    display: flex;
    flex-grow: 1;
    justify-content: space-evenly;
    order: 1;
  }
}

/* small screen  */
@media screen and (max-device-width: 750px) and (max-width: 750px) {
  .container {
    width: 95%;
    margin: auto;
  }

  .flex-container {
    align-self: flex-start;
    margin: auto;
  }
}

a {
  color: var(--link);
  font-weight: 500;
  letter-spacing: 0.05em;
  padding: 2px;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.button {
  color: var(--button_link);
  background-color: var(--button_color);
  border-radius: 7px;
  border-style: none;
  display: inline;
  font-family: 'Montserrat', sans-serif;
  font-size: 16px;
  font-weight: 500;
  margin: 10px;
  padding: 8px 12px;
  text-align: center;
  text-decoration: none;
}

.button:hover {
  cursor: pointer;
}
